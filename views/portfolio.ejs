<%- include('header.ejs')%> 

     
        <% if(typeof (portfolio.image.data) != 'undefined') { %>
            <div class="col-md-3">
                <div class="text-center">
                    <img class="img-circle" src="data:image/png;base64, <%= (portfolio.image.data.toString('base64')) %>" width=100 height=100/>
                    
                </div>
            </div>
        <% } %>

    
    <div class="cotainer">
        <div class="row">
            <div class=".col-md-6 col-md-offset-3">
                <div>
                    <h3 align="left">Name: <%= portfolio.name %></h3>
                </div>
                <hr>
                <div>
                    <h3 align="left">Abstract: <%= portfolio.abstract %></h3>
                </div>
                <hr>
                <% if(typeof req != 'undefined') { %>
                    <a href="/edit-portfolio">Edit Portfolio!</a>
                <% } %>
                <hr>
                <div>
                    <ul class="list-group">

                        <% if(typeof req != 'undefined'){ %>
                            <li class="list-group-item">
                                <a href="/add-work"><h4 align="left">+</h4></a>                    
                            </li>
                        <% } %>
                        <% for(var i=0; i<works.length; i++){%>

                        <li class="list-group-item">
                        <h4 align="left">
                            <a href="/works/<%= works[i].id %>"><%= works[i].title %></a>
                            <% if(typeof req != 'undefined'){ %>
                                <a class="pull-right" href="/works/<%= works[i].id %>/remove" style="padding: 0px 5px;">x</a>
                                <a class="pull-right" href="/works/<%= works[i].id %>/edit" style="padding: 0px 5px;">Edit</a>
                                </h4>
                            <% } %>
                            
                        </li>

                        <% } %>
                    </ul>

                 </div>
            </div>
        </div>
    </div>

</html>